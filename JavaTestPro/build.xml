<?xml version="1.0" ?>
<project name ="javacTest" default="run" basedir=".">
	<path id="lib">
			<fileset dir="E:\JAVA\JavaTestPro\lib"> 
				<include name="*.jar"/>
			</fileset>
			<fileset dir="E:\1111wodeceshi\tomcat\apache-tomcat-9.0.29\lib"> 
				<include name="*.jar"/>
			</fileset>
		</path>
		<!-- 编译 
		<javac srcdir ="${basedir}/src" destdir ="${basedir}/build/classes" encoding="utf-8"> 
			<classpath refid="lib"></classpath> 
		</javac>-->
    <property name="dest" value="build/classes" />
    <target name="clean">
        <delete dir="${dest}"/>
    </target>
    <target name="compile"  depends ="clean">
        <mkdir dir ="${dest}"/>
        <javac srcdir ="src" destdir ="${dest}" includeantruntime="on">
        	<classpath refid="lib"></classpath> 
        	</javac>
    </target>
    <target name="run"  depends ="compile">
        <java classname ="com.edu.anttest.HelloWorld">
            <classpath>
               <pathelement path="${dest}"/>
            </classpath>
        </java>
    </target>
</project>
